// User-defined functions and entry point test (C-style signatures)

fn int add(int a, int b) {
    ret a + b;
}

// Simplified factorial for fixed value (no loops)
fn int factorial5() {
    ret 5 * 4 * 3 * 2 * 1;
}

fn int sum5(int a0, int a1, int a2, int a3, int a4) {
    ret a0 + a1 + a2 + a3 + a4;
}

fn int main() {
    printf("=== Lotus User-Defined Functions Test ===\n\n");

    add(7, 5);
    println("called add(7, 5)");

    factorial5();
    println("called factorial5()");

    sum5(1, 2, 3, 4, 5);
    println("called sum5(1..5)");

    // Simple messages (avoid conditionals)
    println("add done");
    println("factorial done");
    println("sum5 done");

    printf("\n=== User Functions Test Complete ===\n");
    ret 0;
}